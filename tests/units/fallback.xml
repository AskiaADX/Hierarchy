<?xml version="1.0" encoding="utf-8"?>
<tests xmlns="http://www.askia.com/ADCUnitTestSchema"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.askia.com/ADCUnitTestSchema http://www.askia.com/Downloads/dev/schemas/adc2.0/UnitTests.xsd">

  <units>

    <test id="placeholder_should_contains_an_error_message" description="The placeholder should contains an error message" fixture="chapter.xml">
      <arrange>
        <browser>
          <support name="Javascript" value=""/>
        </browser>
      </arrange>
      <asserts>
        <placeholder>
          <assert_contains>
            <![CDATA[Sorry this page uses Javascript code, please enable it.]]>
          </assert_contains>
        </placeholder>
      </asserts>
    </test>

  </units>
    
</tests>

          